<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="viewModel"
                type="me.bickositieff.raspio.ui.playback.PlaybackViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".ui.playback.PlaybackFragment"
            android:id="@+id/frameLayout">

        <ImageButton
                android:onClick="@{() -> viewModel.previousSong()}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_media_previous"
                android:id="@+id/previousPlayback"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/stopPlayback"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:contentDescription="@string/previous_playback"/>

        <ImageButton
                android:src="@android:drawable/ic_media_previous"
                android:onClick="@{() -> viewModel.stopPlayback()}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/stopPlayback"
                android:contentDescription="@string/stop_playback"
                app:layout_constraintEnd_toStartOf="@+id/playPlayback"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/previousPlayback"/>

        <ImageButton
                android:src="@{viewModel.playbackRunning ? @android:drawable/ic_media_pause : @android:drawable/ic_media_play}"
                tools:src="@android:drawable/ic_media_pause"
                android:onClick="@{() -> viewModel.playPause()}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/playPlayback"
                android:contentDescription="@string/play_pause_playback"
                app:layout_constraintEnd_toStartOf="@+id/skipPlayback"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/stopPlayback"/>

        <ImageButton
                android:src="@android:drawable/ic_media_next"
                android:onClick="@{() -> viewModel.skipSong()}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/skipPlayback"
                android:contentDescription="@string/skip_song"
                app:layout_constraintEnd_toStartOf="@+id/volumeMinus"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/playPlayback"/>

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> viewModel.decreaseVolume()}"
                app:srcCompat="@android:drawable/button_onoff_indicator_off"
                android:id="@+id/volumeMinus"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/skipPlayback"
                android:contentDescription="@string/decrease_volume"
                app:layout_constraintEnd_toStartOf="@+id/textVolume"
                />

        <TextView
                android:text="@{viewModel.playbackVolume.toString() + '%'}"
                tools:text="50%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textVolume"
                app:layout_constraintStart_toEndOf="@+id/volumeMinus"
                app:layout_constraintEnd_toStartOf="@+id/volumePlus"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="20sp"/>

        <ImageButton
                android:onClick="@{() -> viewModel.increaseVolume()}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/button_onoff_indicator_on"
                android:id="@+id/volumePlus"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:contentDescription="@string/increase_volume"
                app:layout_constraintStart_toEndOf="@+id/textVolume"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>